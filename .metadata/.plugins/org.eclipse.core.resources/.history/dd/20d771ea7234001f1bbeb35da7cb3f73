package com.example.myBlog.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.web.PageableDefault;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.servlet.ModelAndView;

import com.example.myBlog.model.Blog;
import com.example.myBlog.repository.BlogRepository;

@Controller
public class MainController {
	private BlogRepository blogRepo;
	
	@Autowired
	public MainController(BlogRepository blogRepo) {
		this.blogRepo = blogRepo;
	}
	

	@GetMapping("/")
	public ModelAndView home() {
		ModelAndView modelAndView  = new ModelAndView();
		
		modelAndView.setViewName("/index");
		return modelAndView;
	}
	
//	조회
	@GetMapping("")
	public ModelAndView blogList(Model model, @PageableDefault(size = 10, sort = "id", direction = Sort.Direction.DESC)Pageable pageable) {
		Page<Blog> blogList = blogRepo.findAll(pageable);
	}
//	추가
//	수정
//	삭제
	@GetMapping("/test")
	public String test() {
		return "/test";
	}

}
